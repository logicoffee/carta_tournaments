<h1><%= current_tournament.name %> 選手一覧</h1>

<div class="row my-4">
</div>

<div class="row">
  <% @tournament_classes.each do |t_class| %>
    <div class="col-3">
      <h3>
        <%= t_class.name %><%= link_to 'csv出力', admin_root_path(tournament_class_id: t_class.id, format: :csv), class: 'btn btn-info' %>
      </h3>
      <table class="table">
        <tr>
          <th>氏名</th>
          <th>かるた会</th>
        </tr>
        <% t_class.players.each do |player| %>
          <tr>
            <td><%= player.full_name %></td>
            <td><%= player.team.name %></td>
          </tr>
        <% end %>
      </table>
    </div>
  <% end %>
</div>
