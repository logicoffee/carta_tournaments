<h1>新規管理者登録</h1>

<div class="row justify-content-center">
  <div class="col-4">
    <%= form_for @signing_up_admin, url: admin_sign_up_path(params[:id], email: params[:email]) do |f| %>
      <%= render 'shared/error_messages', object: @signing_up_admin %>

      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control mb-4' %>

      <%= f.label :email %>
      <%= f.text_field :email, class: 'form-control mb-4', disabled: true %>

      <%= f.label :password %>
      <%= f.password_field :password, class: 'form-control mb-4' %>

      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation, class: 'form-control mb-4' %>

      <%= f.submit "登録", class: 'btn btn-primary' %>
    <% end %>
  </div>
</div>