<h1>かるた会新規登録</h1>
<div class="row justify-content-center">
  <div class="col-4">
    <%= form_for @team, url: sign_up_path do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control mb-4' %>

      <%= f.label :leader %>
      <%= f.text_field :leader, class: 'form-control mb-4' %>

      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-control mb-4' %>
      
      <%= f.label :password %>
      <%= f.password_field :password, class: 'form-control mb-4' %>

      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation, class: 'form-control mb-4' %>

      <%= f.submit "登録", class: 'btn btn-primary btn-block' %>
    <% end %>
  </div>
</div>
